{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Travel Stories",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of Travel Stories"
  },
  "servers": [
    {
      "url": "https://nodejs-hw-mongodb-7-oin4.onrender.com"
    },
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "Operations about users."
    }
  ],
  "paths": {
    "/api/stories": {
      "get": {
        "tags": [
          "Stories"
        ],
        "summary": "Get list of stories",
        "operationId": "getStories",
        "description": "Get list of stories with this endpoint",
        "security": [],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer"
            },
            "example": 1
          },
          {
            "in": "query",
            "name": "perPage",
            "schema": {
              "type": "integer",
              "example": 10
            }
          },
          {
            "in": "query",
            "name": "category",
            "schema": {
              "type": "string",
              "enum": [
                "Європа",
                "Азія",
                "Пустелі",
                "Африка"
              ],
              "example": "Європа"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully found stories!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found stories!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "data",
                        "page",
                        "perPage",
                        "totalItems",
                        "totalPages",
                        "hasNextPage",
                        "hasPreviousPage"
                      ],
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/stories"
                          }
                        },
                        "page": {
                          "type": "integer",
                          "example": 2
                        },
                        "perPage": {
                          "type": "integer",
                          "example": 4
                        },
                        "totalItems": {
                          "type": "integer",
                          "example": 4
                        },
                        "totalPages": {
                          "type": "integer",
                          "example": 4
                        },
                        "hasNextPage": {
                          "type": "boolean",
                          "example": false
                        },
                        "hasPreviousPage": {
                          "type": "boolean",
                          "example": true
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get list of users",
        "operationId": "getUsers",
        "description": "Get list of users with this endpoint",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer"
            },
            "example": 1
          },
          {
            "in": "query",
            "name": "perPage",
            "schema": {
              "type": "integer",
              "example": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully found users!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found users!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "data",
                        "page",
                        "perPage",
                        "totalItems",
                        "totalPages",
                        "hasNextPage",
                        "hasPreviousPage"
                      ],
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/user"
                          }
                        },
                        "page": {
                          "type": "number",
                          "example": 2
                        },
                        "perPage": {
                          "type": "number",
                          "example": 4
                        },
                        "totalItems": {
                          "type": "number",
                          "example": 4
                        },
                        "totalPages": {
                          "type": "number",
                          "example": 4
                        },
                        "hasNextPage": {
                          "type": "boolean",
                          "example": false
                        },
                        "hasPreviousPage": {
                          "type": "boolean",
                          "example": true
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      },
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "accessToken"
      }
    },
    "schemas": {
      "stories": {
        "type": "object",
        "required": [
          "img",
          "title",
          "article",
          "category",
          "ownerId",
          "date"
        ],
        "properties": {
          "_id": {
            "description": "Story's id",
            "type": "string",
            "example": "68498236a100312bea07902b"
          },
          "img": {
            "description": "Link to story's image",
            "type": "string",
            "example": "https://ftp.goit.study/img/travel-blog/9584bc494ad84a8fbd5b1ab3rs.webp"
          },
          "title": {
            "description": "Story's title",
            "type": "string",
            "example": "Мадагаскар: острів дивовижних створінь"
          },
          "article": {
            "description": "Story's article",
            "type": "string",
            "example": "Мадагаскар — це планета в мініатюрі..."
          },
          "category": {
            "description": "Category ObjectId reference",
            "type": "string",
            "example": "68fb50c80ae91338641121f4"
          },
          "ownerId": {
            "description": "User's parent id",
            "type": "string",
            "example": "6881563901add19ee16fcffb"
          },
          "date": {
            "description": "Story creation date",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-28T00:00:00.000Z"
          },
          "favoriteCount": {
            "description": "Number of favorites",
            "type": "number",
            "example": 7
          },
          "createdAt": {
            "description": "Story creation timestamp",
            "type": "string",
            "format": "date-time",
            "example": "2024-05-08T16:12:14.954151"
          },
          "updatedAt": {
            "description": "Last story update timestamp",
            "type": "string",
            "format": "date-time",
            "example": "2024-05-08T16:12:14.954158"
          }
        }
      },
      "user": {
        "type": "object",
        "required": [
          "name",
          "avatarUrl",
          "description"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "example": "64f7c2e2b5a3c4d1a8f12345",
            "description": "Унікальний ідентифікатор користувача (MongoDB ObjectId)"
          },
          "name": {
            "type": "string",
            "maxLength": 32,
            "example": "Матвій Савченко",
            "description": "Ім’я користувача"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "matviy@example.com",
            "description": "Електронна пошта користувача (може бути відсутня)"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "maxLength": 128,
            "example": "P@ssw0rd123",
            "description": "Хешований пароль користувача"
          },
          "avatarUrl": {
            "type": "string",
            "format": "uri",
            "example": "https://example.com/avatars/matviy.webp",
            "description": "Посилання на аватар користувача"
          },
          "articlesAmount": {
            "type": "integer",
            "minimum": 0,
            "example": 20,
            "description": "Кількість створених користувачем історій або статей"
          },
          "description": {
            "type": "string",
            "maxLength": 500,
            "example": "Мене звати Матвій. Люблю подорожувати і ділитися натхненням.",
            "description": "Короткий опис користувача"
          },
          "selectedStories": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "64f7c2e2b5a3c4d1a8f789ab"
            },
            "description": "Масив ObjectId історій, які користувач зберіг"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-11-06T09:30:00.000Z",
            "description": "Дата створення запису"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-11-06T10:10:00.000Z",
            "description": "Дата останнього оновлення"
          }
        }
      }
    },
    "responses": {
      "401": {
        "description": "Unauthorized — missing or invalid token",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "Unauthorized — Missing or invalid authentication token."
                },
                "details": {
                  "type": "string",
                  "example": "Please provide a valid Bearer token in the Authorization header."
                }
              }
            }
          }
        }
      },
      "500": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 500
                },
                "message": {
                  "type": "string",
                  "example": "Internal Server Error — Something went wrong on the server."
                },
                "details": {
                  "type": "string",
                  "example": "Unexpected error while updating contact."
                }
              }
            }
          }
        }
      }
    }
  }
}