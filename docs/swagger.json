{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Contacts APP",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of Contacts APP"
  },
  "servers": [
    {
      "url": "https://nodejs-hw-mongodb-7-oin4.onrender.com"
    },
    {
      "url": "http://127.0.0.1:8080"
    }
  ],
  "tags": [
    {
      "name": "Contacts",
      "description": "Operations about users."
    }
  ],
  "paths": {
    "/api/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Logout (private)",
        "description": "Приватний ендпоінт. Видаляє поточну сесію користувача та очищає cookies\n(`accessToken`, `refreshToken`, `sessionId`). Потребує валідні cookies.\n",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Successfully logged out (no content)"
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      },
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "accessToken"
      }
    },
    "responses": {
      "400": {
        "description": "Invalid request data",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 400
                },
                "message": {
                  "type": "string",
                  "example": "Bad Request — Invalid data format or missing required fields."
                },
                "details": {
                  "type": "string",
                  "example": "The field \"email\" must be a valid email address."
                }
              }
            }
          }
        }
      },
      "401": {
        "description": "Unauthorized — missing or invalid token",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "Unauthorized — Missing or invalid authentication token."
                },
                "details": {
                  "type": "string",
                  "example": "Please provide a valid Bearer token in the Authorization header."
                }
              }
            }
          }
        }
      },
      "500": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 500
                },
                "message": {
                  "type": "string",
                  "example": "Internal Server Error — Something went wrong on the server."
                },
                "details": {
                  "type": "string",
                  "example": "Unexpected error while updating contact."
                }
              }
            }
          }
        }
      }
    }
  }
}